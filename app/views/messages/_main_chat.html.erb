<div class="main_chat">
  <div class="main_chat_top">
    <div class="current_chat_name">hogehuga</div>
    <div class="finish_chat_buttom">
      <a href="#">チャットを終了する</a>
    </div>
  </div>

  <div class="main_content">
    <div class="one_message">
      <div class="name_date_message">
        <div class="name_message">Tom</div>
        <div class="date_message">2021/05/10 11:59:11</div>
      </div>
      <div class="content_message">おはよう</div>
    </div>

    <div class="one_message">
      <div class="name_date_message">
        <div class="name_message">Tom</div>
        <div class="date_message">2021/05/10 11:59:11</div>
      </div>
      <div class="content_message">こんばんは</div>
    </div>
  </div>

  <div class="form">
    <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
      <div class="form-input">
        <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
        <label class="form-image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
      </div>
      <%= f.submit '送信', class: 'form-submit' %>
    <% end %>
  </div>
</div>